<center>
  <h1>home</h1>
  <p>welcome to ori's book collection project!</p>
  <% flash.each do |type, msg| %>
    <div>
      <b><%= msg %></b>
    </div>
    <br>
  <% end %>

<%= link_to('add book', new_book_path, :class => 'action new', class: 'button1') %>

<table class='listing' summary='book list'>
  <tr class='header'>
    <th>title</th>
    <th>author</th>
    <th>price</th>
    <th>date published</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= sprintf('$%.2f', book.price) %></td>
    <td><%= book.published_date.strftime('%m/%d/%Y') %></td>
    <td class='actions'>
      <%= link_to('details', book_path(book), :class => 'action show') %>
      <%= link_to('edit', edit_book_path(book), :class => 'action edit') %>
      <%= link_to('delete', delete_book_path(book), :class => 'action delete') %>
    </td>
  </tr>
  <% end %>
</table>
</center>
